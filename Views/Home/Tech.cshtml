@model List<Article>

<h2 class="text-3xl font-bold text-gray-800 mb-6">Tech Crunch</h2>

<!-- News Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    @foreach (var article in Model)
    {
        <div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
            <!-- News Image -->
            <img src="@article.UrlToImage" alt="News Image" class="w-full h-48 object-cover rounded-lg mb-4">

            <!-- Title -->
            <h3 class="text-xl font-semibold text-gray-900 mb-2">@article.Title</h3>

            <!-- Description -->
            <p class="text-gray-700 text-sm line-clamp-3">@article.Description</p>

            <!-- Source and Date -->
            <p class="text-gray-500 text-xs mt-2"><strong>Source:</strong> @article.Source.Name</p>
            <p class="text-gray-500 text-xs"><small>Published: @article.PublishedAt</small></p>

            <!-- Read More Link -->
            <a href="@article.Url" target="_blank" class="block mt-3 text-blue-600 hover:underline font-medium">Read more →</a>
        </div>
    }
</div>
